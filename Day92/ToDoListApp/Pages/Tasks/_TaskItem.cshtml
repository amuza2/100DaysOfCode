@model ToDoTask

<form class="post">
    <div class="card my-3">
        <div class="card-body p-2">
            @Model.Title
        </div>
        <div class="text-center py-2">
            <a class="btn btn-primary btn-sm" href="/tasks/@Model.Id">View</a>
            <form method="post" asp-page-handler="DeleteTask">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this task?');">
                    Delete</button>
            </form>
            @if (Model.Status == ETaskStatus.ToDo)
            {
                <button type="submit" class="btn btn-warning btn-sm" asp-page-handler="StartTask" asp-route-id="@Model.Id">
                    Start
                </button>
            }
            @if (Model.Status == ETaskStatus.Doing)
            {
                <button type="submit" class="btn btn-success btn-sm" asp-page-handler="EndTask" asp-route-id="@Model.Id">
                    Finish
                </button>
            }
        </div>
    </div>
</form>
