<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppControls.CollectionControlDemo"
             Title="CollectionControlDemo">

    <CarouselView ItemsSource="{Binding Recipes}">
        <CarouselView.ItemTemplate>
            <DataTemplate x:DataType="models:Recipe">
                <StackLayout>
                    <Label Text="{Binding Name}" FontSize="Large" HorizontalOptions="Center" />
                    <Image Source="{Binding ImageUrl}" Aspect="AspectFill" />
                    <Label Text="{Binding Description}" />
                </StackLayout>
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>




</ContentPage>