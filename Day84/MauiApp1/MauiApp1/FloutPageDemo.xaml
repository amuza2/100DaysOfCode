<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MauiApp1.FloutPageDemo"
            FlyoutLayoutBehavior="Split"
            Title="FlyoutPageDemo">

    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="Green">
            <Label Text="Hello From Layout" HorizontalOptions="Center" VerticalOptions="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage BackgroundColor="OrangeRed">
            <Label Text="Hello From Detail!" HorizontalOptions="Center" VerticalOptions="Center"/>
        </ContentPage>
    </FlyoutPage.Detail>

</FlyoutPage>