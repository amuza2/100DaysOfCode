<Window
    x:Class="SimpleWpfApp.LoginForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleWpfApp"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginForm"
    Width="875"
    Height="645"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource MaterialDesignFont}"
    FontSize="18"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid Margin="20">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="30"
                    Opacity="0.4"
                    ShadowDepth="1" />
            </Grid.Effect>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="#07bf96"
                ClipToBounds="True"
                CornerRadius="10 0 0 10">
                <Border.Clip>
                    <RectangleGeometry
                        RadiusX="10"
                        RadiusY="10"
                        Rect="0 0 400 605" />
                </Border.Clip>

                <Grid>
                    <StackPanel Margin="0,120,0,0" VerticalAlignment="Top">
                        <TextBlock
                            FontSize="46"
                            FontWeight="Light"
                            Foreground="#fff"
                            Text="Sign up"
                            TextAlignment="Center" />

                        <TextBlock
                            Margin="0,15,0,3"
                            FontSize="16"
                            FontWeight="Light"
                            Foreground="#d1f2eb"
                            Text="to use all features"
                            TextAlignment="Center" />

                        <TextBlock
                            FontSize="16"
                            FontWeight="Light"
                            Foreground="#d1f2eb"
                            Text="of the application"
                            TextAlignment="Center" />
                    </StackPanel>

                    <Ellipse
                        Width="500"
                        Height="500"
                        Margin="50,0,0,-200"
                        VerticalAlignment="Bottom"
                        Fill="#5eccb4"
                        Opacity="0.6" />

                    <Ellipse
                        Width="300"
                        Height="300"
                        Margin="-450,0,0,30"
                        VerticalAlignment="Bottom"
                        Fill="#5eccb4"
                        Opacity="0.3" />

                    <Ellipse
                        Width="250"
                        Height="250"
                        Margin="-300,0,0,-120"
                        VerticalAlignment="Bottom"
                        Fill="#5eccb4" />

                    <Ellipse
                        Width="400"
                        Height="400"
                        Margin="280,0,0,-70"
                        VerticalAlignment="Bottom"
                        Fill="#5eccb4"
                        Opacity="0.8" />
                </Grid>

                <!--  Icon  -->


            </Border>

        </Grid>

    </Grid>
</Window>
