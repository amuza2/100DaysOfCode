<Window
    x:Class="WpfCommunityMvvmToolKit1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfCommunityMvvmToolKit1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
    FontSize="24"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem FontSize="16" Header="_File">
                    <MenuItem Command="{Binding ResetCommand}" Header="_Clear" />
                    <Separator />
                    <MenuItem Command="{Binding ExitCommand}" Header="_Exit" />
                </MenuItem>
            </Menu>
        </DockPanel>


        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Count}" />
                <TextBlock Text=" Clicks" />
            </StackPanel>
            <Button
                Grid.Row="1"
                Margin="0,10"
                Command="{Binding ClickCommand}"
                Content="Click Me" />
        </StackPanel>
    </Grid>
</Window>
